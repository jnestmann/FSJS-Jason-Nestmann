extends layout

block content
    div(class="games_list")
        ul
            each game in games
                li(class="game_entry")
                    div(class="link")
                        a(href="/files/" + game.id) <strong>#{game.title}</strong></a>: #{game.type || "Undefined"} for #{game.min_player || "_"} to #{game.max_player || "_"} players <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
